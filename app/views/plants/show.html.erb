        <div class="page-title-links">
            <%= link_to new_plant_watering_path(@plant), class: "water-button" do %>
                <svg class="water-icon" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve"><g><g><path d="M344.864,112.832c-26.176-33.408-53.248-67.904-75.072-104.96C266.912,3.008,261.664,0,256,0s-10.912,3.008-13.76,7.872 c-21.824,37.024-48.896,71.552-75.072,104.928C114.112,180.448,64,244.352,64,320c0,105.888,86.112,192,192,192 s192-86.112,192-192C448,244.384,397.92,180.48,344.864,112.832z M256,480c-88.224,0-160-71.776-160-160 c0-64.608,46.784-124.256,96.352-187.456c21.632-27.584,43.84-55.904,63.648-86.24c19.808,30.336,42.016,58.688,63.648,86.272 C369.216,195.744,416,255.424,416,320C416,408.224,344.224,480,256,480z"/></g></g></svg>
                Water
            <% end %>
            <%= link_to edit_plant_path(@plant), class: "edit-button" do %>
                Edit
            <% end %>
            <%= form_with(model: @plant, method: :delete, class: "inline-button") do |f| %>
                <%= f.submit "Delete", class: "delete-button" %>
            <% end %>
        </div>
    <% end %>
</div>

