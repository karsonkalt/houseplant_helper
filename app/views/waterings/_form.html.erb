<%= display_errors_if_any(@watering) %>

<div class="card">

    <%= form_with(model: @watering, url: [@plant, @watering]) do |f| %>
        <div class="form-section application-form">  
            <%= f.label :notes %>
            <%= f.text_area :notes %>
        </div>
        <br>
        <%= f.submit id: "application-button" %>
    <% end %>

</div>