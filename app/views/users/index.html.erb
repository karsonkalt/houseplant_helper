<h1>All Users</h1>

<% @users.each do |user| %>
    <div class="card detail-card detail-card-split">
        <%= link_to user.username, user_path(user), class: "detail-card-item-link" %>
        <% if user %>
            <span class="watering-notes"><%= display_user_data(user) %></span>
        <% end %>
    </div>
<% end %>
