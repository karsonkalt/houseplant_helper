<%= display_errors_if_any(@user) %>

<div class="card">

    <%= form_with(model: @user) do |f| %>
        <div class="form-section application-form">  
            <%= f.label :username %>
            <%= f.text_field :username %>
        </div>  
        <div class="form-section application-form">  
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>
        <div class="form-section application-form">  
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <br>
        <%= f.submit id: "application-button" %>
    <% end %>

</div>