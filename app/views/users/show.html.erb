<h1><%= @user.username %></h1>
<div class="card">
    <h2>Owns <%= @user.number_of_plants %> plants</h2>

    <%= link_to "Plants", user_plants_path(@user) %>
    <%= link_to "Edit User", edit_user_path(@user) %>
    <%= form_with(model: @user, method: :delete) do |f| %>
        <%= f.submit "Delete User" %>
    <% end %>
</div>